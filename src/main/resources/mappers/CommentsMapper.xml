<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="CommentsMapper">

    <!-- Beans 클래스의 객체이름(id)과 클래스이름(type)을 명시한다. -->
    <resultMap id="commentsMap"
        type="kr.co.poppy.model.Comments">
        <!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
        <result property="cmtno" column="cmtno" />
        <result property="cmtcontent" column="cmtcontent" />
        <result property="regdate" column="regdate" />
        <result property="regdate" column="editdate" />
        <result property="memno" column="memno" />
        <result property="bbsno" column="bbsno" />
    </resultMap>

    <!-- 단일행 조회를 위한 기능 정의 -->
    <select id="selectItem"
        parameterType="kr.co.poppy.model.Comments"
        resultMap="commentsMap">
        SELECT cmtno, cmtcontent, DATE_FORMAT(regdate, '%Y-%m-%d') AS regdate,
        DATE_FORMAT(editdate, '%Y-%m-%d') AS editdate, memno, bbsno FROM comments
        WHERE cmtno=#{cmtno} AND bbsno=#{bbsno}
    </select>

    <!-- 다중행 조회를 위한 기능 정의 -->
    <select id="selectList"
        parameterType="kr.co.poppy.model.Comments"
        resultMap="commentsMap">
        SELECT cmtno, cmtcontent, DATE_FORMAT(regdate, '%Y-%m-%d') AS regdate,
        DATE_FORMAT(editdate, '%Y-%m-%d') AS editdate, memno, bbsno FROM comments
    </select>

    <!-- 데이터 저장을 위한 기능 정의 -->
    <insert id="insertItem"
        parameterType="kr.co.poppy.model.Comments"
        useGeneratedKeys="true"
        keyProperty="cmtno">
        INSERT INTO comments (cmtcontent, regdate, editdate, memno, bbsno) VALUES (
        #{cmtcontent}, #{regdate}, #{editdate}, #{memno}, #{bbsno});
    </insert>

    <!-- 데이터 삭제를 위한 기능 정의 -->
    <delete id="deleteItem"
        parameterType="kr.co.poppy.model.Comments">
        DELETE FROM comments WHERE cmtno=#{cmtno};
    </delete>
    <!-- 회원 탈퇴시 작성한 모든 댓글 삭제를 위한 기능 정의 -->
    <delete id="delete_members_item"
        parameterType="kr.co.poppy.model.Members">
        DELETE FROM comments WHERE memno=#{memno};
    </delete>

    <!-- 데이터 갱신을 위한 기능 정의 -->
    <update id="updateItem"
        parameterType="kr.co.poppy.model.Comments">
        UPDATE comments SET cmtcontent=#{cmtcontent}, regdate=#{regdate}, editdate=#{editdate}, memno=#{memno}, bbsno=#{bbsno}
        WHERE cmtno=#{cmtno};
    </update>
</mapper>