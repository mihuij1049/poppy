<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="HeartMapper">

    <!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
    <resultMap id="heartMap"
        type="kr.co.poppy.model.Heart">
        <result property="heartno"  	column="heartno" />
        <result property="regdate"      column="regdate" />
        <result property="editdate"     column="editdate" />
        <result property="memno"      	column="memno" />
        <result property="goodsno"    	column="goodsno" />
   </resultMap>
   
<!-- 단일행 조회를 위한 기능 정의 -->
    <select id="selectItem"
        parameterType="kr.co.poppy.model.Heart"
        resultMap="HeartMap">
        SELECT heartno, regdate, editdate, memno, bbsno FROM heart
        WHERE heartno=#{heartno};
    </select>

    <!-- 다중행 조회를 위한 기능 정의 -->
    <select id="selectList"
        parameterType="kr.co.poppy.model.Heart"
        resultMap="HeartMap">
        SELECT heartno, regdate, editdate, memno, bbsno FROM heart
    </select>

    <!-- 데이터 저장을 위한 기능 정의 -->
    <insert id="insertItem"
        parameterType="kr.co.poppy.model.Heart"
        useGeneratedKeys="true"
        keyProperty="heartno">
        INSERT INTO heart (regdate, editdate, memno, bbsno) VALUES (
        #{regdate}, #{editdate}, #{memno}, #{bbsno});
    </insert>

    <!-- 데이터 삭제를 위한 기능 정의 -->
    <delete id="deleteItem"
        parameterType="kr.co.poppy.model.Heart">
        DELETE FROM rvheart WHERE heartno=#{heartno};
    </delete>

    <!-- 데이터 갱신을 위한 기능 정의 -->
    <update id="updateItem"
        parameterType="kr.co.poppy.model.Heart">
        UPDATE heart SET regdate=#{regdate}, editdate=#{editdate}, memno=#{memno}, bbsno=#{bbsno}
        WHERE heartno=#{heartno};
    </update>
</mapper>