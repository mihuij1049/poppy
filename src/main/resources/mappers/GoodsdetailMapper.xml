<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="GoodsdetailMapper">

	<!-- Beans 클래스의 객체이름(id)과 클래스이름(type)을 명시한다. -->
	<resultMap type="kr.co.poppy.model.Goodsdetail"
		id="goodsdetailMap">
		<!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
		<result property="gddetailno" column="gddetailno" />
		<result property="gdoption" column="gdoption" />
		<result property="gdstock" column="gdstock" />
		<result property="regdate" column="regdate" />
		<result property="editdate" column="editdate" />
		<result property="goodsno" column="goodsno" />
		<result property="username" column="username" />
		<result property="bbstitle" column="bbscontent" />
		<result property="rvlike" column="rvlike" />
		<result property="imgname" column="imgname" />
		<result property="imgtype" column="imgpath" />
		<result property="imgext" column="imgext" />
		<result property="imgsize" column="imgsize" />
		<result property="bbstype" column="bbstype" />
		<result property="bbscontent" column="bbscontent" />
		<result property="memno" column="memno" />
		<result property="bbsno" column="bbsno" />
	</resultMap>

	<!-- 단일행 조회를 위한 기능 정의 -->
	<select id="selectItem"
		parameterType="kr.co.poppy.model.Goodsdetail"
		resultMap="goodsdetailMap">
		SELECT m.username, b.bbstitle, b.bbscontent, b.regdate,
		b.rvlike, i.imgname,
		i.imgtype, i.imgpath FROM bbs b INNER JOIN members
		m ON b.memno =
		m.memno INNER JOIN imgs i ON b.goodsno = i.goodsno WHERE
		b.bbstype =
		#{bbstype};
	</select>

	<!-- 데이터 저장을 위한 기능 정의 -->
	<insert id="insertItem"
		parameterType="kr.co.poppy.model.Goodsdetail" useGeneratedKeys="true"
		keyProperty="gddetailno">
		INSERT INTO bbs(bbstype, bbstitle, bbscontent, rvlike,
		regdate, editdate, memno, goodsno)
		VALUES (#{bbstype}, #{bbstitle},
		#{bbscontent}, #{rvlike}, now(), now(),
		#{memno}, #{goodsno});

		INSERT
		INTO imgs(imgname, imgext, imgpath,
		imgsize, imgtype, regdate,
		editdate,
		goodsno, bbsno)
		VALUES (#{imgname},
		#{imgext}, #{imgpath},
		#{imgsize} ,
		#{imgtype}, now(), now(),
		#{goodsno}, #{bbsno});
	</insert>

	<!-- 데이터 갱신을 위한 기능 정의 -->
	<update id="updateItem"
		parameterType="kr.co.poppy.model.Goodsdetail">
		UPDATE bbs SET bbscontent = #{bbscontent} WHERE
		memno=#{memno};
	</update>

	<!-- 데이터 삭제를 위한 기능 정의 -->
	<delete id="deleteItem"
		parameterType="kr.co.poppy.model.Goodsdetail">
	</delete>
</mapper>