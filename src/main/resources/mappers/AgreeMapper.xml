<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="AgreeMapper">

    <!-- Beans의 멤버변수(property)이름과 대상 테이블의 컬럼(column)을 연결한다. -->
    <resultMap id="agreeMap"
        type="kr.co.poppy.model.Agree">
        <result property="agreeno"        	column="agreeno" />
        <result property="useragree"        column="useragree" />
        <result property="privateagree"     column="privateagree" />
        <result property="emailagree"       column="emailagree" />
        <result property="shoppingagree"    column="shoppingagree" />
        <result property="regdate"         	column="regdate" />
        <result property="editdate"         column="editdate" />
        <result property="memno"       		column="memno" />
   </resultMap>
    
   <!-- 단일행 조회를 위한 기능 정의 -->
    <select id="selectItem"
        parameterType="kr.co.poppy.model.Agree"
        resultMap="AgreeMap">
        SELECT agreeno, useragree, privateagree, emailagree, shoppingagree, regdate, editdate, memno FROM agree
        WHERE agreeno=#{agreeno};
    </select>

    <!-- 다중행 조회를 위한 기능 정의 -->
    <select id="selectList"
        parameterType="kr.co.poppy.model.Agree"
        resultMap="agreeMap">
        SELECT agreeno, useragree, privateagree, emailagree, shoppingagree, regdate, editdate, memno FROM agree
    </select>

    <!-- 데이터 저장을 위한 기능 정의 -->
    <insert id="insertItem"
        parameterType="kr.co.poppy.model.Agree"
        useGeneratedKeys="true"
        keyProperty="agreeno">
        INSERT INTO agree (useragree, privateagree, emailagree, shoppingagree, regdate, editdate, memno) VALUES (
        #{useragree}, #{privateagree}, #{emailagree}, #{shoppingagree}, #{regdate}, #{editdate}, #{memno});
    </insert>

    <!-- 데이터 삭제를 위한 기능 정의 -->
    <delete id="deleteItem"
        parameterType="kr.co.poppy.model.Agree">
        DELETE FROM agree WHERE agreeno=#{agreeno};
    </delete>

    <!-- 데이터 갱신을 위한 기능 정의 -->
    <update id="updateItem"
        parameterType="kr.co.poppy.model.Agree">
        UPDATE agree SET useragree=#{useragree}, privateagree=#{privateagree}, emailagree=#{emailagree}, shoppingagree=#{shoppingagree}, regdate=#{regdate}, editdate=#{editdate}, memno=#{memno}
        WHERE agreeno=#{agreeno};
    </update>
</mapper>